# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.svg text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.env text eol=lf
*.env.* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.eslintrc text eol=lf
.prettierrc text eol=lf
*.prisma text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
docs export-ignore
tests export-ignore
*.test.* export-ignore
*.spec.* export-ignore
README.md export-ignore
CONTRIBUTING.md export-ignore
.editorconfig export-ignore
.eslintrc* export-ignore
.prettierrc* export-ignore
jest.config.* export-ignore
tsconfig.*.json export-ignore

# Diff settings
*.md diff=markdown
*.prisma diff=prisma

# Linguist overrides
*.prisma linguist-language=Prisma
*.md linguist-documentation
docs/* linguist-documentation
*.sql linguist-detectable=true
*.prisma linguist-detectable=true